<div class="container">
  <div class="row">
    <div class="col-md-2 text-center">
      <h5>ユーザ一覧</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr class="table-light">
            <th>会員ID</th>
            <th>氏名</th>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user|  %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to admin_user_path(user.id) do %>
                <%= user.name %>
                <% end %>
            </td>
            <td><%= user.user_name %></td>
            <td><%= user.email %></td>
            <td><% if user.is_deleted %>
                  <strong class="text-secondary">退会</strong>
                <% else %>
                  <strong class="text-success">有効</strong>
                <% end %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
<%= paginate @users %>