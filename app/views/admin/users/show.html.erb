<div class="col-md-3">
      <h5 class="bg-light text-center"><%= @user.user_name %>
    さんのユーザ情報詳細</h5>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <table class="table table-borderless">
        <thead>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <tr>
             <td>会員ID</td>
             <td></td>
             <td><%= @user.id %></td>
          </tr>
          <tr>
               <td>ユーザ名</td>
               <td></td>
               <td><%= @user.user_name %></td>
          </tr>
          <tr>
               <td>メールアドレス</td>
               <td></td>
               <td><%= @user.email %></td>
          </tr>
          <tr>
               <td>会員ステータス</td>
               <td></td>
               <td><% if @user.is_deleted %>
                  <strong class="text-secondary">退会</strong>
                <% else %>
                  <strong class="text-success">有効</strong>
                <% end %></td>
          </tr>
          <tr>
               <td></td>
               <td><%= link_to "投稿一覧",admin_posts_path,class:"btn btn-info" %></td>
               <td><%= link_to '編集する',edit_admin_user_path(@user.id),class:'btn btn-sm btn-success' %></td>
               <td><%= link_to "戻る",admin_users_path,class:"btn btn-info" %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <% @posts.each do |posts| %>
      <p>
        <%= image_tag @user.get_profile_image(90,90),class:"rounded-circle" %>
      <%= @user.user_name %>
      </p>
      <% @posts.get_image.each do |image| %>
      <%= link_to post_path(posts.id) do %>
      <%= image_tag posts.image,size:"500x400" %>
      <% end %>
      <% end %>
        <% if posts.liked_by?(current_user) %>
        <p>
          <%= link_to post_likes_path(posts.id),method: :delete do %>
          <i class="fa-solid fa-heart"></i><%= posts.likes.count %>
          <% end %>
          </p>
        <% else %>
          <p>
          <%= link_to post_likes_path(posts.id),method: :post do %>
          <i class="fa-regular fa-heart"></i><%= posts.likes.count %>
          <% end %>
        <% end %>
        </p>
      <p><%= posts.text %></p>
      <% end %>
  </div>
</div>

