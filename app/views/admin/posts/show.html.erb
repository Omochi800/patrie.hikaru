<%= render "layouts/admin.header" %>
<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">

      <p>
       <%= image_tag @post.user.get_profile_image(50,50),class:"rounded-circle" %>

        <%= @post.user.user_name %>
      </p>
      <div>
        <p>
            <%= image_tag @post.image,size:"500x400" %>

        </p>
        <p><%= @post.created_at.strftime('%Y.%m.%d') %>
        </p>
        <p><%= @post.text %></p>
        <p><%= link_to '削除する',admin_post_path(@post),class:"btn btn-danger",method: :delete %></p>
      </div>
      </div>
    </div>
  </div>