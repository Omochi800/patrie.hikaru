<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <% if @post.user == current_user %>
            <%= link_to '削除する',post_path(@post),class:"btn btn-danger",method: :delete %>
      <% end %>
      <p><%= link_to user_path(@user) do %>
       <%= image_tag @post.user.get_profile_image(50,50),class:"rounded-circle" %>
       <% end %>
        <%= @post.user.user_name %>
      </p>
      <div>
        <p><% @post.get_image.each do |image| %>
            <%= image_tag @post.image,size:"500x400" %>
           <% end %>
        </p>
        <p><%= @post.created_at.strftime('%Y.%m.%d') %>
        </p>
        <p><%= @post.text %></p>
      </div>
      </div>
    </div>
  </div>