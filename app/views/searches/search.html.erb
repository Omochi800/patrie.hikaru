<h4>検索結果</h4>

<table class="table table-hovor table-inverse">
    <% if @range == "User" %>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= link_to user_path(user) do %>
                <%= user.user_name %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
    <% else %>
    <tbody>
        <% @posts.each do |posts| %>
        <tr>
            <td><%= link_to post_path(posts) do %>
                <%= image_tag posts.user.get_profile_image(80,80) %>
                <% end %>
            </td>
            <td><%= link_to post_path(posts) do %>
                <%= posts.user.user_name %>
                <% end %>
            </td>
            <td><%= link_to post_path(posts) do %>
                <%= posts.text %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
    <% end %>
</table>
