<div class="container">
  <div class="row">
    <div class="col-md-10">
      <%= form_with model: @post,url: posts_path do |f| %>
      <%= f.submit '投稿',class:"btn" %>

      <%= f.file_field:image,accept:'image/*' %>
      <i class="fa-solid fa-camera-retro"></i>

      <p><%= f.text_area:text %></p>

      <% end %>
    </div>
  </div>
</div>