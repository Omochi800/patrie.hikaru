<%= render "user/shared/links" %>
<h4>ログイン</h4>
<%= form_with model: @user,url: user_session_path do |f| %>
<div class="card-list-container py-5">
  <div class="card w-50 mx-auto mt-4">
    <div class="card-body">
      <div class="row">
      <div class="col-6">
          <p class="card-text">
            <p class="field">
              <%= f.label :メールアドレス %>
              <%= f.email_field :email, autofocus: true,style:"border: none", autocomplete: "email" %>
            </p>
            <p class="field">
              <%= f.label :パスワード %>

                <%= f.password_field :password, autocomplete: "current-password",style:"border: none" %>
            </p>
              <% if devise_mapping.rememberable? %>
                <p class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </p>
              <% end %>
              <%= f.submit "ログイン",class:"btn"%>
          </p>
      </div>
    </div>
    </div>
  </div>
</div>
<% end %>